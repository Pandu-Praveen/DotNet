@model IEnumerable<Product>

<h2>All Products</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                
                <a href="/Product/UpdateProductPrice?id=@item.Id">Update</a> |
                <a href="/Product/DeleteProduct?id=@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
<button class="btn btn-primary">
    <a href="/Product/Index" style="color:white; text-decoration:none;">Back to Menu</a>
</button>



