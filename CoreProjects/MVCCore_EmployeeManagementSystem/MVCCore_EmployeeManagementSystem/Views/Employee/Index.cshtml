@model IEnumerable<Employee>

<h2>Employees</h2>
<a class="btn btn-primary" asp-action="Create">Add Employee</a>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Designation</th>
            <th>Department</th>
            <th>Date Of Joining</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Email</td>
                <td>@emp.Designation</td>
                <td>@emp.Department</td>
                <td>@emp.DateOfJoining.ToShortDateString()</td>
                <td>@emp.IsActive</td>
                <td>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@emp.EmployeeId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@emp.EmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
