@model MVC_AtmApp.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Confirmation</h2>

<h4>Are you sure you want to delete this customer?</h4>

<div class="card p-3">
    <p><strong>Name:</strong> @Model.FullName</p>
    <p><strong>Account Number:</strong> @Model.AccountNumber</p>
    <p><strong>Balance:</strong> @Model.Balance.ToString("C")</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
