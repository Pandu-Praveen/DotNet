@{
    ViewData["Title"] = "Balance";
}

<h2>Check Balance</h2>

<form asp-action="Balance" method="get" class="mt-3">
    <div class="form-group mb-3">
        <label>Account Number</label>
        <input name="accountNumber" class="form-control" required />
    </div>
    <button class="btn btn-info" type="submit">Show Balance</button>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</form>

@if (ViewBag.Balance != null)
{
    <div class="alert alert-success mt-3">
        💰 Current Balance: <strong>@ViewBag.Balance.ToString("C")</strong>
    </div>
}
