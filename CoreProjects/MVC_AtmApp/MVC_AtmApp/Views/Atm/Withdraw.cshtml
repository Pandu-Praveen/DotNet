@{
    ViewData["Title"] = "Withdraw";
}

<h2>Withdraw Money</h2>

<form asp-action="Withdraw" method="post" class="mt-3">
    <div class="form-group mb-3">
        <label>Account Number</label>
        <input name="accountNumber" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label>Amount</label>
        <input name="amount" type="number" step="0.01" class="form-control" required />
    </div>
    <button class="btn btn-warning" type="submit">Withdraw</button>
    <a asp-action="Index" class="btn btn-primary">Back</a>

</form>

@if (ViewBag.Success != null)
{
    if ((bool)ViewBag.Success)
    {
        <div class="alert alert-success mt-3">✅ Withdraw successful. New balance: @ViewBag.Balance</div>
    }
    else
    {
        <div class="alert alert-danger mt-3">❌ Withdraw failed (insufficient funds or invalid customer).</div>
    }
}
